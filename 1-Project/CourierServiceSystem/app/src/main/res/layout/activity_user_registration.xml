<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg2"
    tools:context="com.ashi.courierservicesystem.UserRegistration">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lNameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_alignLeft="@+id/lNameLayout5"
        android:layout_alignStart="@+id/lNameLayout5"
        android:layout_marginTop="60dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/baborder"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:id="@+id/et_username_userreg"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="User Name" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@drawable/buttonborder"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_submit_user"
        android:layout_below="@+id/lNameLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lNameLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lNameLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@drawable/baborder"
            android:id="@+id/et_password_userreg"
            android:layout_below="@+id/et_username_userreg"
            android:layout_centerHorizontal="true"
            android:hint="Password" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lNameLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/lNameLayout2"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:background="@drawable/baborder"
            android:id="@+id/et_emailid_userreg"
            android:layout_below="@+id/et_password_userreg"
            android:hint="Email ID" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lNameLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/lNameLayout3"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="phone"
            android:ems="10"
            android:background="@drawable/baborder"
            android:id="@+id/et_mobilenum_userreg"
            android:layout_below="@+id/et_emailid_userreg"
            android:layout_centerHorizontal="true"
            android:hint="Mobile Number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lNameLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/lNameLayout4"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:background="@drawable/baborder"
            android:id="@+id/et_location_userreg"
            android:layout_above="@+id/btn_submit_user"
            android:layout_centerHorizontal="true"
            android:hint="Location" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
